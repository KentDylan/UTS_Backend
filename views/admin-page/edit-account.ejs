<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Edit Account
        </h1>
        <%- include ("../partials/messages"); %>
        <form method="POST" action="/account?_method=PUT">
          <input type="hidden" name="_id" value="<%= user._id %>" />
          <input
            type="hidden"
            name="oldEmail"
            value="<%= user.oldEmail || user.email %>"
          />
          <div class="form-group">
            <label class="mb-3" for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control mb-3"
              placeholder="Enter Name"
              value="<%= user.name %>"
            />
          </div>
          <div class="form-group">
            <label class="mb-3" for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control mb-3"
              placeholder="Enter Email"
              value="<%= user.email %>"
            />
          </div>
          <div class="form-group">
            <label class="mb-3" for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control mb-3"
              placeholder="New Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label class="mb-3" for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control mb-4"
              placeholder="Confirm New Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>

          <button type="submit" class="btn btn-primary fw-bold">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

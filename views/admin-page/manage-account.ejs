<div class="container mt-5">
  <div class="row">
    <div class="col-md-10">
      <h2>Accounts List</h2>
      <%- include('../partials/messages') %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user, i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= user.email %></td>
            <td>
              <div class="d-flex">
                <!-- Edit Button -->
                <a href="/account/<%= user.email %>" class="btn btn-primary fw-bold me-2 d-block mt-3">Edit</a>
                <!-- Delete Button -->
                <form method="POST" action="/account?_method=DELETE">
                  <input type="hidden" name="email" value="<%= user.email %>" />
                  <button type="submit" class="btn btn-danger fw-bold d-block mt-3" onclick="return confirm('Do you want to delete this account?')">Delete</button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

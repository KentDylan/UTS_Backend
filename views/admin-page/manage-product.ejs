<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h2>Products List</h2>
      <a href="/product/add" class="btn btn-primary mb-2 fw-bold"
        >Add New Product</a
      >
      <%- include('../partials/messages') %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach((product, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= product.name %></td>
            <td>$ <%= product.price %></td>
            <td>
              <a
                href="/product/<%= product.name %>"
                class="btn btn-success abdge rounded-pill"
                ><i class="bi bi-info-circle"></i> details</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
